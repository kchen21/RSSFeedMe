<% layout('layout') -%>

<div class="row">
  <% if (errors.length > 0) { %>
    <div class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismissible="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= errors %>
    </div>
  <% } %>

  <form method="post">
    <h1>Welcome to RSSFeedMe!</h1>
    <p>Feed your need for the latest news and information, all in one place!</p>
  </form>
</div>
